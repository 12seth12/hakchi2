copyleft_text='THIS MODDED SYSTEM IS NOT FOR RESALE!\\n\\nThis console was modded using free hakchi2 software. If you bought already modded system, you were scammed.\\n'
scriptname=p8020_copyleft

rm -f $preinitpath/$scriptname
cd $mountpoint/
find usr/share/ -name "strings.*" -print | while read l ; do
	restore /$l
	sed -i -e "s/\"sys_copyright_games_HeadText\": \"\",/\"sys_copyright_games_HeadText\": \"$copyleft_text\",/g" $rootfs/$l
	echo "overmount /$l" >> $preinitpath/$scriptname
done

return 1
